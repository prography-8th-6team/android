<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/bg_radius_9"
    android:backgroundTint="@color/color_f1f1f1"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingTop="21dp"
    android:paddingBottom="22dp">

    <TextView
        android:id="@+id/index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="뉴욕 리스트"
        android:textColor="@color/color_5c5c5c"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="2023.05.11 ~ 2023.05.17"
        android:textColor="@color/color_5c5c5c"
        android:textSize="10sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/layout_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_member1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_radius_9"
            android:backgroundTint="@color/white"
            android:paddingHorizontal="10dp"
            android:paddingVertical="3dp"
            android:text="이형준"
            android:textColor="@color/color_5c5c5c"
            android:textSize="10sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_member2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg_radius_9"
            android:backgroundTint="@color/white"
            android:paddingHorizontal="10dp"
            android:paddingVertical="3dp"
            android:text="이준영"
            android:textColor="@color/color_5c5c5c"
            android:textSize="10sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_memberCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_circle"
            android:backgroundTint="@color/white"
            android:paddingHorizontal="4dp"
            android:paddingVertical="3dp"
            android:text="+3"
            android:textColor="@color/color_5c5c5c"
            android:textSize="10sp"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>