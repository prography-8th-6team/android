<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:background="@drawable/bg_radius_9"
        android:backgroundTint="@color/color_f8f2c3"
        android:paddingHorizontal="11dp"
        android:paddingVertical="7dp"
        android:text="형준"
        android:textColor="@color/color_707070"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:background="@drawable/bg_f1f1f1_arrow"
        android:paddingHorizontal="13dp"
        android:paddingVertical="7dp"
        android:text="₩ 21,500"
        android:textAlignment="center"
        android:textColor="@color/color_969696"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/tv_paid_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_radius_9"
        android:backgroundTint="@color/color_d8f4f1"
        android:paddingHorizontal="11dp"
        android:paddingVertical="7dp"
        android:text="준호"
        android:textColor="@color/color_707070"
        android:textSize="16sp" />
</LinearLayout>